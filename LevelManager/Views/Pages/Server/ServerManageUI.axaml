<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LevelManager.Views.Pages.Server.ServerManageUI">
    <ScrollViewer>
    <StackPanel>
        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Button Margin="5,5" Click="Button_OnClick">刷新</Button>
            <Button Margin="5,5" Name="AddServerBtn" Click="AddServerBtn_OnClick">添加服务器</Button>
        </DockPanel>
        <TextBlock Text="所有服务器" FontSize="32"></TextBlock>
            <StackPanel Name="ServerBox">
                
            </StackPanel>

        <TextBlock Text="所有局域网房间" FontSize="32"></TextBlock>
        <Button Margin="5,5" Click="Button_OnClick">刷新</Button>
        <TextBlock Text="从此网络中搜索" FontSize="14"></TextBlock>
        <ComboBox Width="300" Name="NetworkBox" SelectionChanged="NetworkBox_OnSelectionChanged"></ComboBox>
        <StackPanel Name="LANServerBox">
                
        </StackPanel>
    </StackPanel>
    </ScrollViewer>
</UserControl>
