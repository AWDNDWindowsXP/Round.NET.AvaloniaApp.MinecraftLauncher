<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Width="400"
             x:Class="LevelManager.Views.Pages.Server.AddServer">
    <StackPanel>
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5">
            <Label Margin="5" VerticalAlignment="Center" MinWidth="200">服务器名称：</Label>
            <TextBox Watermark="Server Name" Name="NameBox"></TextBox>
        </DockPanel>
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="5">
            <Label Margin="5" VerticalAlignment="Center" MinWidth="200">服务器地址（可包含端口）：</Label>
            <TextBox Watermark="Server IP" Name="IPBox"></TextBox>
        </DockPanel>
    </StackPanel>
</UserControl>
