<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RMCL.Views.Pages.Main.SettingPages.SettingSubPages.ColorGlassSetting">
    <StackPanel Margin="5">
        <DockPanel Margin="5">
            <TextBlock VerticalAlignment="Center" DockPanel.Dock="Left">背景颜色</TextBlock>
            <ColorPicker Name="ColorPicker" ColorChanged="ColorView_OnColorChanged" DockPanel.Dock="Right" HorizontalAlignment="Right" Width="400"></ColorPicker>
        </DockPanel>
    </StackPanel>
</UserControl>
