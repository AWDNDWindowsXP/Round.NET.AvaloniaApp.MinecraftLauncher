<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="RMCL.Core.Views.Pages.DialogPage.GameDrawerPages.EditGameGroup">
    <StackPanel>
        <DockPanel>
            <TextBlock Margin="5" VerticalAlignment="Center">分类名称</TextBlock>
            <TextBox Name="TextBox" TextChanged="TextBox_OnTextChanged" Height="32" Width="200" Margin="5"></TextBox>
        </DockPanel>
        <DockPanel>
            <TextBlock Margin="5" VerticalAlignment="Center">颜色偏好</TextBlock>
            <ColorPicker Name="ColorPicker" ColorChanged="ColorPicker_OnColorChanged" Height="32" Width="200" Margin="5" Color="Orange"></ColorPicker>
        </DockPanel>
    </StackPanel>
</UserControl>
