<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fluentIcons="clr-namespace:FluentAvalonia.FluentIcons;assembly=FluentAvalonia.FluentIcons"
             mc:Ignorable="d"
             x:Class="RMCL.Core.Views.MiniControls.MusicCapsule">
    <UserControl.Styles>
        <Style Selector="Grid">
            <Setter Property="Transitions">
                <Transitions>
                    <ThicknessTransition Property="Margin" Duration="0:0:1.2" Easing="QuinticEaseOut"></ThicknessTransition>
                </Transitions>
            </Setter>
        </Style>
    </UserControl.Styles>
    <Grid>
        <Grid  Margin="0,100,0,0" Name="Border">
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="180" Height="40" Background="{DynamicResource BackColor}" CornerRadius="24">
                <DockPanel HorizontalAlignment="Stretch" LastChildFill="True">
                    <fluentIcons:FluentIcon Margin="10" Width="24" Icon="MusicNote216Filled" Height="16" DockPanel.Dock="Left" HorizontalAlignment="Left"/> 
            
                    <Grid DockPanel.Dock="Right" HorizontalAlignment="Stretch" Margin="0,5,30,0">
                        <TextBlock Name="TextBlock" FontSize="12" FontWeight="Medium" HorizontalAlignment="Center">音量</TextBlock>
                        <ProgressBar Name="ProgressBar" MinWidth="20" Margin="0,10,0,-2"></ProgressBar>
                    </Grid>
                </DockPanel>
            </Border>
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="180" Height="40" Background="White" Opacity="0.08" CornerRadius="24"></Border>
        </Grid>
    </Grid>
</UserControl>
